<?xml version="1.0" encoding="utf-8"?>
<Nuntiare>
  <Name>res_group</Name>
  <Author>Fredy Ramirez</Author>
  <Description>Tryton Groups</Description>
  <Page>
    <PageHeader>
      <Height>1.5cm</Height>
      <Style/>
      <ReportItems>
        <Textbox>
          <Value>GROUPS</Value>
          <Name>header1</Name>
          <Height>1.5cm</Height>
          <Left>0pt</Left>
          <Width>180mm</Width>
          <Top>3mm</Top>
          <ZIndex>1</ZIndex>
          <Style>
            <FontWeight>Bold</FontWeight>
            <VerticalAlign>Middle</VerticalAlign>
            <FontSize>16pt</FontSize>
          </Style>
        </Textbox>
      </ReportItems>
    </PageHeader>
    <PageHeight>11in</PageHeight>
    <PageWidth>8.5in</PageWidth>
    <TopMargin>.25in</TopMargin>
    <LeftMargin>.25in</LeftMargin>
    <RightMargin>.5in</RightMargin>
    <BottomMargin>.65in</BottomMargin>
    <Style/>
  </Page>

  <DataSets>
    <DataSet>
      <Name>Data</Name>
      <Query>
        <DataSourceName>DS1</DataSourceName>
        <CommandText>='SELECT id, name FROM res_group WHERE ' + Parameters.str_where </CommandText>
      </Query>
      <Fields>
        <Field>
          <Name>id</Name>
          <DataField>id</DataField>
          <DataType>Integer</DataType>
        </Field>
        <Field>
          <Name>name</Name>
          <DataField>name</DataField>
          <DataType>String</DataType>
        </Field>
      </Fields>
    </DataSet>
  </DataSets>
  <Body>
    <ReportItems>
      <Tablix>
        <Name>tablix_groups</Name>
        <DataSetName>Data</DataSetName>
        <TablixColumnHierarchy>
          <TablixMembers>
            <TablixMember/>
            <TablixMember/>
          </TablixMembers>
        </TablixColumnHierarchy>
        <TablixRowHierarchy>
          <TablixMembers>
            <TablixMember/>
            <TablixMember>
              <Group>
                <Name>Details</Name>
                <SortExpressions>
                  <SortExpression>
                    <Value>=F.id</Value>
                  </SortExpression>
                </SortExpressions>
              </Group>
            </TablixMember>
          </TablixMembers>
        </TablixRowHierarchy>
        <TablixBody>
          <TablixColumns>
            <TablixColumn>
              <Width>1in</Width>
            </TablixColumn>
            <TablixColumn>
              <Width>4in</Width>
            </TablixColumn>
          </TablixColumns>
          <TablixRows>
            <TablixRow>
              <Height>0.3in</Height>
              <TablixCells>
                <TablixCell>
                  <CellContents>
                    <ReportItems>
                      <Textbox>
                        <Name>txt_id</Name>
                        <Value>ID</Value>
                        <Style>
                          <BackgroundColor>Aqua</BackgroundColor>
                          <FontWeight>Bold</FontWeight>
                          <TextAlign>Center</TextAlign>
                          <VerticalAlign>Middle</VerticalAlign>
                          <FontSize>12pt</FontSize>
                          <Border>
                            <Color>LightGrey</Color>
                            <BorderStyle>Solid</BorderStyle>
                          </Border>
                        </Style>
                      </Textbox>
                    </ReportItems>
                  </CellContents>
                </TablixCell>
                <TablixCell>
                  <CellContents>
                    <ReportItems>
                      <Textbox>
                        <Name>txt_name</Name>
                        <Value>Name</Value>
                        <Style>
                          <BackgroundColor>Aqua</BackgroundColor>
                          <FontWeight>Bold</FontWeight>
                          <TextAlign>Center</TextAlign>
                          <VerticalAlign>Middle</VerticalAlign>
                          <FontSize>12pt</FontSize>
                          <Border>
                            <Color>LightGrey</Color>
                            <BorderStyle>Solid</BorderStyle>
                          </Border>
                        </Style>
                      </Textbox>
                    </ReportItems>
                  </CellContents>
                </TablixCell>
              </TablixCells>
            </TablixRow>
            <TablixRow>
              <Height>0.6in</Height>
              <TablixCells>
                <TablixCell>
                  <CellContents>
                    <ReportItems>
                      <Textbox>
                        <Value>=F.id</Value>
                        <CanGrow>true</CanGrow>
                        <Name>txt_id_field</Name>
                        <Style>
                          <PaddingLeft>2pt</PaddingLeft>
                          <Border>
                            <Color>LightGrey</Color>
                            <BorderStyle>Solid</BorderStyle>
                          </Border>
                        </Style>
                      </Textbox>
                    </ReportItems>
                  </CellContents>
                </TablixCell>
                <TablixCell>
                  <CellContents>
                    <ReportItems>
                      <Textbox>
                        <Value>=F.name</Value>
                        <CanGrow>true</CanGrow>
                        <Name>txtx_name_field</Name>
                        <Style>
                          <PaddingLeft>2pt</PaddingLeft>
                          <Border>
                            <Color>LightGrey</Color>
                            <BorderStyle>Solid</BorderStyle>
                          </Border>
                        </Style>
                      </Textbox>
                    </ReportItems>
                  </CellContents>
                </TablixCell>
              </TablixCells>
            </TablixRow>
          </TablixRows>
        </TablixBody>
      </Tablix>
    </ReportItems>
  </Body>
  <DataSources>
    <DataSource>
      <Name>DS1</Name>
      <ConnectionProperties>
        <DataProvider>PostgreSQL</DataProvider>
        <ConnectObject>=P.conn_string</ConnectObject>
      </ConnectionProperties>
    </DataSource>
  </DataSources>
  <ReportParameters>
    <ReportParameter>
      <Name>conn_string</Name>
      <DataType>String</DataType>
      <DefaultValue>''</DefaultValue>
    </ReportParameter>
    <ReportParameter>
      <Name>str_where</Name>
      <DataType>String</DataType>
      <DefaultValue>id&lt;&gt;-1</DefaultValue>
    </ReportParameter>
  </ReportParameters>
</Nuntiare>
